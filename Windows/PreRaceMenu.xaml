<Window x:Class="periode_1_gebruikersinteractie_groep_6.Windows.PreRaceMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:periode_1_gebruikersinteractie_groep_6.Windows"
        mc:Ignorable="d"
        Title="PreRaceMenu" Height="1080" Width="1920">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />

            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        <StackPanel 
        Orientation="Horizontal" 
        HorizontalAlignment="Center"
        Grid.Column="2"
        Grid.Row="3">
            <Image Grid.Column="2" 
               Width="50"
               Height="50"
               Source="/Assets/Back Button.png"
               Margin="0,00,60,0"/>
            <Image Grid.Column="0" 
               Width="50"
               Height="50"
               Source="/Assets/Next Button.png"
               Margin="60,0,0,0"/>
        </StackPanel>
        
        <Image Grid.Column="2" 
               Grid.Row="2"
               Width="300" 
               Height="300" 
               Source="/Assets/Car Placeholder.png" Stretch="Fill"/>

        <StackPanel 
        Orientation="Horizontal" 
        HorizontalAlignment="Center"
        Grid.Column="5"
        Grid.Row="3">
            <Image Grid.Column="5" 
               Width="50"
               Height="50"
               Source="/Assets/Back Button.png"
               Margin="0,0,60,0"/>
            <Image Grid.Column="5" 
               Width="50"
               Height="50"
               Source="/Assets/Next Button.png"
               Margin="60,0,0,0"/>
        </StackPanel>
        
        <Image Grid.Column="5" 
               Grid.Row="2"
               Width="300" 
               Height="300" 
               Source="/Assets/Car Placeholder.png" Stretch="Fill"/>


        <StackPanel 
            Orientation="Vertical" 
            HorizontalAlignment="Center"
            Grid.Column="2"
            Grid.Row="4">
            <TextBlock 
                Text="PLAYER 1:"
                HorizontalAlignment="Center"
                FontSize="20" />
            <TextBox 
                x:Name="usernameTextBox1" 
                Width="200" 
                Height="30" 
                FontSize="18" />
        </StackPanel>

        <StackPanel 
            Orientation="Vertical" 
            HorizontalAlignment="Center"
            Grid.Column="5"
            Grid.Row="4">
            <TextBlock 
                Text="PLAYER 2:"
                HorizontalAlignment="Center"
                FontSize="20" />
            <TextBox 
                x:Name="usernameTextBox2" 
                Width="200" 
                Height="30" 
                FontSize="18" />
        </StackPanel>

        <Button x:Name="gereedButton1" 
                    Content="GEREED" 
                    Width="200" 
                    Height="55" 
                    FontSize="42" 
                    Grid.Column="2"
                    Grid.Row="5"
                    Margin ="0,10,0,10"/>
        <Button x:Name="gereedButton2" 
                    Content="GEREED" 
                    Width="200" 
                    Height="55" 
                    FontSize="42"
                    Grid.Column="5"
                    Grid.Row="5"
                    Margin ="0,10,0,10"/>
        
        <Button  x:Name="menuButton" 
                    Content="MENU" 
                    Width="200" 
                    Height="55" 
                    FontSize="42"
                    Grid.Column="3"
                    Grid.Row="6"
                    Grid.ColumnSpan="2"/>
    </Grid>
</Window>
