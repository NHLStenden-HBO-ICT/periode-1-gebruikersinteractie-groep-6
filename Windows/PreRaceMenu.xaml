<UserControl
	x:Class="periode_1_gebruikersinteractie_groep_6.Windows.PreRaceMenu"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:periode_1_gebruikersinteractie_groep_6.Windows"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="{x:Static SystemParameters.PrimaryScreenHeight}"
	d:DesignWidth="{x:Static SystemParameters.PrimaryScreenWidth}"
	Background="White"
	mc:Ignorable="d">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="20" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="2*" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="2*" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="20" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="20" />
			<RowDefinition Height="*" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="20" />
		</Grid.RowDefinitions>
		<Grid
			Grid.Row="3"
			Grid.Column="2"
			Margin="30,0,30,0">
			<Image
				Grid.Column="2"
				Width="80"
				Height="80"
				HorizontalAlignment="Left"
				Source="/Assets/Back Button.png" />
			<Image
				Grid.Column="0"
				Width="80"
				Height="80"
				HorizontalAlignment="Right"
				Source="/Assets/Next Button.png" />
		</Grid>
		<Image
			Grid.Row="2"
			Grid.Column="2"
			Width="auto"
			Height="auto"
			Source="/Assets/Car Placeholder.png"
			Stretch="Fill" />
		<Grid
			Grid.Row="3"
			Grid.Column="5"
			Margin="30,0,30,0">
			<Image
				Grid.Column="5"
				Width="80"
				Height="80"
				HorizontalAlignment="Left"
				Source="/Assets/Back Button.png" />
			<Image
				Grid.Column="5"
				Width="80"
				Height="80"
				HorizontalAlignment="Right"
				Source="/Assets/Next Button.png" />
		</Grid>
		<Image
			Grid.Row="2"
			Grid.Column="5"
			Width="auto"
			Height="auto"
			Source="/Assets/Car Placeholder.png"
			Stretch="Fill" />
		<StackPanel
			Grid.Row="4"
			Grid.Column="2"
			HorizontalAlignment="Center"
			Orientation="Vertical">
			<TextBlock
				HorizontalAlignment="Center"
				FontSize="40"
				FontWeight="SemiBold"
				Text="PLAYER 1:" />
			<TextBox
				x:Name="usernameTextBox1"
				Width="400"
				Height="50"
				FontSize="40" />
		</StackPanel>
		<StackPanel
			Grid.Row="4"
			Grid.Column="5"
			HorizontalAlignment="Center"
			Orientation="Vertical">
			<TextBlock
				HorizontalAlignment="Center"
				FontSize="40"
				FontWeight="SemiBold"
				Text="PLAYER 2:" />
			<TextBox
				x:Name="usernameTextBox2"
				Width="400"
				Height="50"
				FontSize="40" />
		</StackPanel>
		<Button
			x:Name="gereedButton1"
			Grid.Row="5"
			Grid.Column="2"
			Width="300"
			Height="75"
			Margin="0,10,0,10"
			Background="#B1B1B1"
			Content="GEREED"
			FontSize="48"
			FontWeight="SemiBold" />
		<Button
			x:Name="gereedButton2"
			Grid.Row="5"
			Grid.Column="5"
			Width="300"
			Height="75"
			Margin="0,10,0,10"
			Background="#B1B1B1"
			Content="GEREED"
			FontSize="48"
			FontWeight="SemiBold" />
		<Button
			x:Name="menuButton"
			Grid.Row="6"
			Grid.Column="3"
			Grid.ColumnSpan="2"
			Width="300"
			Height="75"
			Background="#B1B1B1"
			Content="MENU"
			FontSize="48"
			FontWeight="SemiBold" Click="menuButton_Click" />
	</Grid>
</UserControl>