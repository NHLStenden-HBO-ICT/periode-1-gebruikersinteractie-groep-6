<UserControl x:Class="periode_1_gebruikersinteractie_groep_6.Windows.Opscreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:periode_1_gebruikersinteractie_groep_6.Windows"
        mc:Ignorable="d"
		d:DesignHeight="{x:Static SystemParameters.PrimaryScreenHeight}" d:DesignWidth="{x:Static SystemParameters.PrimaryScreenWidth}"
			 Loaded="Opscreen_Loaded">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="0.25*"/>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="0.25*"/>
		</Grid.RowDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" SpreadMethod="Repeat">
				<GradientStop Color="#FF1F1F1F" Offset="1"/>
                <GradientStop Color="#FF1F1F1F" Offset="0"/>
                <GradientStop Color="#FFFFB34F" Offset="0.5"/>
            </LinearGradientBrush>
        </Grid.Background>
		<Image Grid.Row="1" Source="../Assets/game_logo.png"
       RenderOptions.EdgeMode="Aliased"/>
	</Grid>
</UserControl>
