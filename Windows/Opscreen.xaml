<UserControl
	x:Class="periode_1_gebruikersinteractie_groep_6.Windows.Opscreen"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:periode_1_gebruikersinteractie_groep_6.Windows"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="{x:Static SystemParameters.PrimaryScreenHeight}"
	d:DesignWidth="{x:Static SystemParameters.PrimaryScreenWidth}"
	Loaded="Opscreen_Loaded"
	mc:Ignorable="d">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="0.25*" />
			<RowDefinition Height="1*" />
			<RowDefinition Height="0.25*" />
		</Grid.RowDefinitions>
		<Grid.Background>
			<LinearGradientBrush SpreadMethod="Repeat" StartPoint="0.5,0" EndPoint="0.5,1">
				<GradientStop Offset="1" Color="#FF1F1F1F" />
				<GradientStop Offset="0" Color="#FF1F1F1F" />
				<GradientStop Offset="0.5" Color="#FFFFB34F" />
			</LinearGradientBrush>
		</Grid.Background>
		<Image
			Grid.Row="1"
			RenderOptions.EdgeMode="Aliased"
			Source="../Assets/game_logo.png" />
	</Grid>
</UserControl>
