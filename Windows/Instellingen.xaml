<UserControl
	x:Class="periode_1_gebruikersinteractie_groep_6.Windows.instellingenUI"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="{x:Static SystemParameters.PrimaryScreenHeight}"
	d:DesignWidth="{x:Static SystemParameters.PrimaryScreenWidth}"
	Background="White"
	mc:Ignorable="d">

	<Grid>
		<Grid.Background>
			<LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
				<GradientStop Offset="0.01" Color="#FFFFBF6C" />
				<GradientStop Offset="0.24" Color="#FFFFB34F" />
			</LinearGradientBrush>
		</Grid.Background>
		<Viewbox Stretch="Uniform" StretchDirection="Both">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="174" />
					<RowDefinition Height="68*" />
					<RowDefinition Height="111*" />
					<RowDefinition Height="128*" />
					<RowDefinition Height="128*" />
					<RowDefinition Height="20" />
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="100" />
					<ColumnDefinition Width="100" />
					<ColumnDefinition Width="226*" />
					<ColumnDefinition Width="420*" />
					<ColumnDefinition Width="720*" />
					<ColumnDefinition Width="201*" />
					<ColumnDefinition Width="313*" />
					<ColumnDefinition Width="100" />
					<ColumnDefinition Width="100" />
				</Grid.ColumnDefinitions>
				<TextBlock
					Grid.Row="0"
					Grid.Column="3"
					Height="122"
					VerticalAlignment="Center"
					FontFamily="Calibri"
					FontSize="100"
					FontWeight="Bold"
					Foreground="#1f1f1f"
					Text="INSTELLINGEN"
					TextAlignment="Center" />
				<TextBlock
					Grid.Row="2"
					Grid.Column="2"
					Width="257"
					Height="92"
					HorizontalAlignment="Left"
					VerticalAlignment="Center"
					FontFamily="Calibri"
					FontSize="75"
					FontWeight="Bold"
					Foreground="#1f1f1f"
					Text="MUZIEK"
					TextAlignment="Left" />
				<Slider
					Grid.Row="2"
					Grid.Column="3"
					Width="700"
					Height="18"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					Maximum="1"
					Minimum="0"
					ValueChanged="muziekSlider_ValueChanged"
                    Style="{StaticResource CustomSliderStyle}"
					Value="0.5" />


				<Button
					x:Name="muteButtonMuziek"
					Grid.Row="2"
					Grid.Column="4"
					Width="100"
					Height="100"
					Margin="101,61,0,61"
					HorizontalAlignment="Left"
					Background="#b1b1b1"
                    Click="MuteButtonMuziek_Click">

					<Button.Resources>
						<Style TargetType="Border">
							<Setter Property="CornerRadius" Value="10" />
						</Style>
					</Button.Resources>
					<Image
                        Name="muteImg"
						Width="80"
						Height="80"
						Source="../Assets/instellingenUIAssets/muteButton.png"
						Stretch="Fill" />
				</Button>

				<TextBlock 
                    Grid.Row="2"
				Grid.Column="2"
				Width="257"
				Height="92"
				HorizontalAlignment="Left"
				VerticalAlignment="Center"
				FontFamily="Calibri"
				FontSize="75"
				FontWeight="Bold"
				Foreground="#1f1f1f"
				Text="MUZIEK"
				TextAlignment="Left"
                    />

				
				<Button
					Grid.Column="6"
					Grid.ColumnSpan="3"
					Width="80"
					Height="80"
					Margin="20,0,0,20"
					Click="ReturnButton_Click"
					Content="X"
					FontSize="36"
					FontWeight="Bold">
					<Button.Resources>
						<Style TargetType="{x:Type Border}">
							<Setter Property="CornerRadius" Value="5" />
						</Style>
					</Button.Resources>
				</Button>
			</Grid>
		</Viewbox>
	</Grid>
</UserControl>


