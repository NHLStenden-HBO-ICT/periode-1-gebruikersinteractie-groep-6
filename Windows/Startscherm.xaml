<UserControl
	x:Class="periode_1_gebruikersinteractie_groep_6.Windows.Startscherm"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:periode_1_gebruikersinteractie_groep_6.Windows"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="{x:Static SystemParameters.PrimaryScreenHeight}"
	d:DesignWidth="{x:Static SystemParameters.PrimaryScreenWidth}"
	mc:Ignorable="d">
	<Grid Background="Black">
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<UserControl
			x:Name="Simulation"
			Grid.RowSpan="3"
			Grid.ColumnSpan="3" />
		<TextBlock
			Grid.Row="2"
			Grid.Column="0"
			Grid.ColumnSpan="3"
			HorizontalAlignment="Center"
			VerticalAlignment="Center"
			FontSize="72"
			Foreground="#FFF1F1F1"
			Text="Druk op een toets om te starten">
			<TextBlock.Effect>
				<DropShadowEffect
					BlurRadius="6"
					ShadowDepth="-3"
					Color="#FF000000" />
			</TextBlock.Effect>
		</TextBlock>
	</Grid>
</UserControl>

