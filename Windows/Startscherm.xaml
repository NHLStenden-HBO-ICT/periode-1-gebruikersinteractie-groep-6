<UserControl x:Class="periode_1_gebruikersinteractie_groep_6.Windows.Startscherm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:periode_1_gebruikersinteractie_groep_6.Windows"
      mc:Ignorable="d" 
      d:DesignHeight="{x:Static SystemParameters.PrimaryScreenHeight}" d:DesignWidth="{x:Static SystemParameters.PrimaryScreenWidth}">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

		<Image Grid.ColumnSpan="3" Grid.RowSpan="3" Source="/Assets/Background 2.jpg" Stretch="Fill"/>
		<TextBlock Text="Druk op een toets om te starten" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" FontSize="72" Grid.ColumnSpan="3" Foreground="#FFF1F1F1">
			<TextBlock.Effect>
				<DropShadowEffect ShadowDepth="-3" BlurRadius="6" Color="#FF000000" />
			</TextBlock.Effect>
		</TextBlock>
	</Grid>
</UserControl>

