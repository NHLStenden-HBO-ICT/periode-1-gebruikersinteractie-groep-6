<Window x:Class="periode_1_gebruikersinteractie_groep_6.MainMenu"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:periode_1_gebruikersinteractie_groep_6"
        mc:Ignorable="d"
        Title="MainMenu" Height="{x:Static SystemParameters.PrimaryScreenHeight}" Width="{x:Static SystemParameters.PrimaryScreenWidth}">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="20" />
			<ColumnDefinition Width="auto" />
			<ColumnDefinition Width="auto" />
			<ColumnDefinition Width="auto" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="20" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height = "20" />
			<RowDefinition Height = "auto" />
			<RowDefinition Height = "auto" />
			<RowDefinition Height = "auto" />
			<RowDefinition Height = "*" />
			<RowDefinition Height = "20" />
		</Grid.RowDefinitions>
		<TextBlock  Grid.Column="4" 
                    Grid.Row="4" 
                    Text="COOL RACE SPEL" 
                    FontSize="50" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Top" 
                    Margin="0,185,0,0" />
		<Button     x:Name="startButton" 
                    Content="START" 
                    Width ="auto" 
                    Height="auto" 
                    FontSize="42"
                    Grid.Column="4" 
                    Grid.Row="4" 
                    Margin="860,323,860,646">
			<Button.Resources>
				<Style TargetType="Border">
					<Setter Property="CornerRadius" Value="5"/>
				</Style>
			</Button.Resources>
		</Button>
		<Button     x:Name="scorebordButton" 
                    Content="SCOREBORD" 
                    Width ="auto" 
                    Height="auto" 
                    FontSize="42"
                    Grid.Column="4" 
                    Grid.Row="4" 
                    Margin="800,418,800,551">
			<Button.Resources>
				<Style TargetType="Border">
					<Setter Property="CornerRadius" Value="5"/>
				</Style>
			</Button.Resources>
		</Button>
		<Button     x:Name="instellingenButton" 
                    Content="INSTELLINGEN" 
                    Width ="auto" 
                    Height="auto" 
                    FontSize="42"
                    Grid.Column="4" 
                    Grid.Row="4" 
                    Margin="780,513,780,456">
			<Button.Resources>
				<Style TargetType="Border">
					<Setter Property="CornerRadius" Value="5"/>
				</Style>
			</Button.Resources>
		</Button>
		<Button     x:Name="uitlegButton" 
                    Content="UITLEG" 
                    Width ="auto" 
                    Height="auto" 
                    FontSize="42"
                    Grid.Column="4" 
                    Grid.Row="4" 
                    Margin="840,607,840,362">
			<Button.Resources>
				<Style TargetType="Border">
					<Setter Property="CornerRadius" Value="5"/>
				</Style>
			</Button.Resources>
		</Button>
	</Grid>
</Window>
